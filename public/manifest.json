{
  "name": "Time Management",
  "short_name": "time-management",
  "version": "1.0.0",
  "description": "An extension preset",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "idle",
    "tabs",
    "history",
    "alarms",
    "notifications",
    "nativeMessaging"
  ],

  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": "assets/icon.png",
    "default_title": "Extension Preset",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "index.html"
  }
}
